{
  "source": {
    "include": ["src/", "module/", "README.md"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(node_modules|tests|coverage)"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "template": "templates/default",
    "encoding": "utf8",
    "destination": "./docs/",
    "recurse": true,
    "readme": "README.md"
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true
    }
  }
}

